{% for block in section.blocks %}
  {% if block.settings.nav-btn-url-1 != blank %}
    <div class="container mt-20 mt-lg-50">
      {% if block.settings.heading-text != blank %}
      <!-- Chriate â€“ Mas Item #193 - Category Page Refinement (23/01/23) -->
      <div class="row show-test_193">
        <div class="col-12">
          <h3 class="collection-navigation__heading mb-15 mb-lg-25">{{ block.settings.heading-text }}</h3>
        </div>
      </div>
      {% endif %}
      
      <div class="row show-test_193" style="position: relative;">
        <div class="slider__prev collection-navigation__prev position-absolute cursor-pointer" data-js-slider-prev><i>{% render 'icon-theme-006' %}</i></div>
          <div class="collection-navigation__carousel">
          {% for i in (1..12) %}
            {% capture nav-btn-url %}nav-btn-url-{{i}}{% endcapture %}
            {% capture nav-btn-img %}nav-btn-image-{{i}}{% endcapture %}
            {% capture nav-btn-text %}nav-btn-text-{{i}}{% endcapture %}
            {% if block.settings[nav-btn-url] != blank %}
              <div class="col-12">
                <div class="mb-10 w-100">          
                  <a href="{{ block.settings[nav-btn-url] }}" class="btn btn--status w-100 p-0" style="background-color: black;"> 
                    <span class="d-flex flex-center">
                      {% if block.settings[nav-btn-img] != blank %}
                        <img src="{{ block.settings[nav-btn-img] | img_url:'2000x' }}" />
                      {% elsif block.settings[nav-btn-text] != blank %}
                        <span class="btn__text" style="color: white;">{{ block.settings[nav-btn-text] }}</span>
                      {% endif %}
                    </span>
                  </a>        
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="slider__next collection-navigation__next position-absolute cursor-pointer" data-js-slider-next><i>{% render 'icon-theme-007' %}</i></div>
      </div>
      <div class="row hide-test_193">
        {% for i in (1..12) %}
          {% capture nav-btn-url %}nav-btn-url-{{i}}{% endcapture %}
          {% capture nav-btn-img %}nav-btn-image-{{i}}{% endcapture %}
          {% capture nav-btn-text %}nav-btn-text-{{i}}{% endcapture %}
          {% if block.settings[nav-btn-url] != blank %}
            <div class="col-4 col-sm-4 col-md-4 col-lg-2">
              <div class="mb-10 w-100">          
                <a href="{{ block.settings[nav-btn-url] }}" class="btn btn--status w-100 p-0" style="background-color: black;"> 
                  <span class="d-flex flex-center">
                    {% if block.settings[nav-btn-img] != blank %}
                      <img src="{{ block.settings[nav-btn-img] | img_url:'2000x' }}" />
                    {% elsif block.settings[nav-btn-text] != blank %}
                      <span class="btn__text" style="color: white;">{{ block.settings[nav-btn-text] }}</span>
                    {% endif %}
                  </span>
                </a>        
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
{% endfor %}

