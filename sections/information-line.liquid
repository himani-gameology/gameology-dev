            <div class="container">
                <div class="row py-{{ information_line_padding_v }}">
                    {%- for block in section.blocks -%}
                      <div class="col-12 col-lg-{{ 12 | divided_by: section.blocks.size }} {% if block.settings.title == 'Weekly TCG' %} weekly-in-store {% endif %}">
                        {% if block.settings.url != blank %}<a href="{{ block.settings.url }}"  title="{% if block.settings.title == 'Weekly TCG' %} Click here for the Calendar {% endif %}">{% endif %}
