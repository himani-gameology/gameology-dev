                                <div class="d-flex align-items-center justify-content-center {% if block.settings.title != 'Weekly TCG' %} py-10 {% endif %}">
                                    <i class="mr-15">{% include 'load-icon' with name: block.settings.icon %}</i>
                                    <div>
                                        {%- if block.settings.title != blank -%}
                                            <h6 class="information-line__title d-inline  hoverout">{{ block.settings.title }}
