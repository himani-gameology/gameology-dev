                                            {% endif %}
                                        {%- endif -%}
                                        {%- if block.settings.paragraph != blank -%}
                                            <p class="d-inline hoverout">{{ block.settings.paragraph }}</p>
                                            {% if block.settings.title == 'Weekly TCG' %}
                                                <p class="d-inline hover"></br>FOR THE CALENDAR</p>
                                            {% endif %}
                                        {%- endif -%}
                                    </div>
                                </div>
                            {%- else -%}
                                <div class="d-flex align-items-start justify-content-start py-10">
                                    <i class="mr-15">{% include 'load-icon' with name: block.settings.icon %}</i>
                                    <div>
                                        {%- if block.settings.title != blank -%}
                                            <h6 class="information-line__title mb-0">{{ block.settings.title }} </h6>
                                        {%- endif -%}
                                        {%- if block.settings.paragraph != blank -%}
                                            <p class="d-inline">{{ block.settings.paragraph }}</p>
                                        {%- endif -%}
                                    </div>
                                </div>
                            {%- endif -%}
                        {% if block.settings.url != blank %}</a>{% endif %}
                        </div>     
                    {%- endfor -%}
                </div>
            </div>
        </div>
    </div>
{%- else -%}
    {% render 'no-blocks' %}
{%- endif -%}
