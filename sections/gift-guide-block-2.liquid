<div class="row gift-guide-block">
  <div class="col-12 col-lg-9 p-0 pl-lg-10 pr-lg-10 d-flex justify-content-center">
    <a href="{{ section.settings.block-left-url }}"><img src="{{ section.settings.block-left-img | image_url: height: 520 }}"></a>
  </div>
  
  <div class="col-12 col-lg-3 p-0 pl-lg-10 pr-lg-10 d-flex justify-content-center flex-column">
    <a href="{{ section.settings.block-right-url-1 }}"><img src="{{ section.settings.block-right-img-1 | image_url: height: 250 }}" class="mb-9"></a>
    <a href="{{ section.settings.block-right-url-2 }}"><img src="{{ section.settings.block-right-img-2 | image_url: height: 250 }}" class="mt-9"></a>
  </div>
</div>
{% schema %}
{
    "name": "Gift Guide Block 2",
    "settings": [
        {
            "type": "image_picker",
            "id": "block-left-img",
            "label": "Left Block Image (1/2 Wide)"
        },
        {
            "type": "url",
            "id": "block-left-url",
            "label": "Left Block Url"
        },
        
        
        {
            "type": "image_picker",
            "id": "block-right-img-1",
            "label": "Right Block Image 1 (1/6 Square)"
        },
        {
            "type": "url",
            "id": "block-right-url-1",
            "label": "Right Block Url 1"
        },
        {
            "type": "image_picker",
            "id": "block-right-img-2",
            "label": "Right Block Image 2 (1/6 Square)"
        },
        {
            "type": "url",
            "id": "block-right-url-2",
            "label": "Right Block Url 2"
        }
    ],
    "presets": [
        {
            "name": "Gift Guide Block 2"
        }
    ]
}
{% endschema %}