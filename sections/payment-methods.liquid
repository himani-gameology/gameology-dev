{%- if section.blocks.size > 0 -%}
    <div class="payment-methods">
        {%- for block in section.blocks -%}
            {% if block.settings.svg != blank %}
                {{ block.settings.svg }}
            {% else %}
                {% if block.settings.image != blank %}
                    <img src="{{ block.settings.image | img_url: '40x' }}">
                {% endif %}
            {% endif %}
        {%- endfor -%}
    </div>
{%- endif -%}

{% schema %}
{
    "name": "Payment methods",
    "blocks": [
        {
            "type": "payment",
            "name": "Payment methods",
            "settings": [
                {
                  "type": "html",
                  "id": "svg",
                  "label": "Svg"
                },
                {
                  "type": "image_picker",
                  "id": "image",
                  "label": "Image",
                  "info": "Optional"
                }
            ]
        }
    ]
}
{% endschema %}