  		var datePattern = /[0-9]{2,}-*[a-zA-Z]{3,}-*[0-9]{2,}/i;
  		var monthPattern = /[a-zA-Z]{3,}-*[0-9]{2,}/i;
  		var quarterPattern = /[a-zA-Z0-9]{2,}-*[0-9]{2,}/i;
