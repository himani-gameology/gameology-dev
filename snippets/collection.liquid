        <div class="container">
          {%- for link in URLs -%}
            {%- assign linkSplit = link | split: '/' | last -%}
            <div class="subcollection-block{% if linkSplit contains collection.url  %} active{%- endif -%}">
              <a href="{{link}}">{{TEXTs[forloop.index0]}}</a>
            </div>
          {%- endfor -%}

        </div>
      </div>
    </div>
  </div>
{%- endif -%}