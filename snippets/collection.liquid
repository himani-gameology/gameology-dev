{%- liquid
    assign URLs = URLs | split: '|'
    assign TEXTs = TEXTs | split: '|'
-%}
{%- if URLs.size > 0 -%}
  <!-- Conversionry - 126 Restyle collection Board Game12/1/2021 -->
