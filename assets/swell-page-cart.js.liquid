jQuery(document).ready(function () {
  setTimeout(function(){
  jQuery(document).on("swell:initialized", function () {
    console.log("swell:initialized");
    spapi.activeRedemptionOptions.forEach(option => {
      if (option.discount_type === "fixed_amount") {
        jQuery(".cart-fixed-amount").append(
          jQuery("<option>").text(`${option.prettyDiscount} Off for ${option.cost_text}`).attr({
            "data-redemption-option-id": option.id
          }).val(option.id).addClass("swell-redemption-link")
        )
      }
    })
    jQuery(".swell-cart-element input[type=button]").click((e) => {
      console.log("click");
      e.preventDefault();
      jQuery("option:selected").click();
    })
  });
  }, 3000);
});
